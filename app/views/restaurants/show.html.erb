<div class="container"><h1><%= @restaurant.name  %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<p><% @restaurant.reviews.each do |review| %></p>
<ul>
  <li><%= review.rating %></li>
  <li><%= review.content %></li>
</ul>
<% end %>
<h2>Add a review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content%>
        <%= f.submit class: 'btn btn-primary m-1' %>
      <% end %>
<%= link_to "Back", restaurants_path, class: 'btn btn-primary m-1'  %>
</div>
